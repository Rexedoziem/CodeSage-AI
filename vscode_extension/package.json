{
  "name": "advanced-python-copilot",
  "displayName": "Advanced Python Copilot",
  "description": "AI-powered code completion for Python",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Advanced Python Copilot",
      "properties": {
        "advancedPythonCopilot.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable the copilot"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc",
    "pretest": "npm run build",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@vscode/extension-telemetry": "^0.9.7",
    "axios": "^1.7.7",
    "glob": "^11.0.0",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "react-secure-storage": "^1.3.2",
    "rimraf": "^6.0.1",
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.178",
    "@types/node": "^14.18.63",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^7.27.0",
    "typescript": "^4.9.5"
  }
}
